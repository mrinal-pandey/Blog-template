<%- include("partials/header") -%>

<h1>Hello</h1>
<p> <%=homeContent%> </p>
<%  posts.forEach(function(post) { %>
<h3> <%= post.postTitle %> </h3>
<%    if(post.postBody.length > 100) { %>
<p>
  <%= post.postBody.slice(0, 100) + "..." %>
  <a href="/posts/<%= post.postTitle %>">Read more</a>
</p>

<%  } else { %>
<p> <%= post.postBody %> </p>
<%  } %>
<% }) %>

<%- include("partials/footer") -%>
